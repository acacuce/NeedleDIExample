# Uncomment the next line to define a global platform for your project
platform :ios, '14.0'

inhibit_all_warnings!
use_frameworks! :linkage => :static

def base_frameworks
  pod 'NeedleFoundation', '~> 0.14.0'
end

target 'App' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for App
  base_frameworks
end

target 'Cards' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Cards
  base_frameworks
end

target 'Chat' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Chat
  base_frameworks
end

target 'Profile' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Profile
  base_frameworks
end

target 'Transactions' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Transactions
  base_frameworks
end
